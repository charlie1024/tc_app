<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/WTIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_smallb"
		android:gravity="center"
        android:text="@string/Wtisnow"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/timestamps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WTIN"
        android:layout_centerHorizontal="true"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="34sp"
        android:textStyle="bold"
		android:gravity="center"/>
		
	<TextView
        android:id="@+id/timezones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timestamps"
        android:layout_centerHorizontal="true"
        android:text="@string/blank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="24sp"
		android:gravity="center"/>

    <Button
        android:id="@+id/getNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timezones"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_slight"
        android:paddingBottom="@dimen/padding_slight"
        android:textSize="20sp"
        android:text="@string/getNor" />

    <Button
        android:id="@+id/getNowDemical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getNow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_decilarge"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_slight"
        android:paddingBottom="@dimen/padding_slight"
        android:textSize="20sp"
        android:text="@string/getDem" />
    
        <Button
        android:id="@+id/getNowhD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getNowDemical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_decilarge"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_slight"
            android:paddingBottom="@dimen/padding_slight"
        android:textSize="20sp"
        android:text="@string/getDbl" />

    <CheckBox
        android:id="@+id/isGMT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getNowhD"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/padding_large"
        android:contentDescription="@string/desc"
        android:text="@string/isGMT" />

</RelativeLayout>

</ScrollView>
